<div class="categories-nav">
  <% if (categories.length) { %>
    <ul>
      <% categories.map((categoryObj) => { %>
        <li>
          <a href="/category/<%= categoryObj.category %>"><%= categoryObj.category %></a>
          <% if (locals.delete && categoryObj.category !== 'unassigned') { %>
              <form method="get">
                <button type="button" onclick="openModalHandler(event, '<%= categoryObj %>')">
                  <%- include("../../public/assets/icons/delete.svg") %>
                </button>
                <button type="button" onclick="openModalHandler(event)">
                  <%- include("../../public/assets/icons/edit.svg") %>
                </button>

                <button type="submit" name="modal" value="open">Open</button>
                <button type="submit" name="modal" value="open">Open</button>
              </form>
            <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>There are 0 categories.</p>
  <% } %>
 
</div>