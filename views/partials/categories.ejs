<div class="categories-nav">
  <% if (categories.length) { %>
    <ul>
      <% categories.map((categoryObj) => { %>
        <li>
          <a href="/category/<%= categoryObj.category %>"><%= categoryObj.category %>
          <% if (locals.delete && categoryObj.category !== 'unassigned') { %>
            <form action="/category/delete/<%= categoryObj.category %>" method="post">
              <button type="submit">
                <%- include("../../public/assets/icons/delete.svg") %>
              </button>
            </form>
          <% } %>
          </a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>There are 0 categories.</p>
  <% } %>
 
</div>